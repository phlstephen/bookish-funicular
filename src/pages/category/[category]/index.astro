import Layout from '../../../layouts/Layout.astro';
import categories from '../../../data/categories';
export function getStaticPaths() {
  return categories.map((item) => {
    return {
      params: {
        category: item.name.toLocaleLowerCase(),
      },
      props: {
        categoryItem: item,
      },
    };
  });
}

